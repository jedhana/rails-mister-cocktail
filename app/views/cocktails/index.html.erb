<h1>Cocktails</h1>
<div class="container">

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cocktails.each do |cocktail| %>
        <tr>
          <td><%= cocktail.name %></td>
          <td><%= link_to 'Show', cocktail %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<p><%= link_to "+ add cocktail", new_cocktail_path %></p>
